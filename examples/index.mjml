    <mp-section background-color="#ffffff" padding-bottom="20px" padding-top="20px">
      <mp-column width="100%" vertical-align="top" >
        <mj-text>
          Hello
        </mj-text>
        <mj-accordion>
          
        </mj-accordion>
      </mp-column>
    </mp-section>
    <mp-section pardot-repeatable="true" pardot-removable="true" background-color="#ffffff" padding-bottom="20px" padding-top="20px">
