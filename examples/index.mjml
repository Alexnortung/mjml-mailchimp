        <mj-text align="center" color="#000000" font-family="sans-serif" font-size="16px" padding="25px">Hello World</mj-text>
        <mj-button background-color="#333333" color="#FFFFFF" font-size="15px" align="center" vertical-align="middle" border="none" padding="15px 30px" border-radius="3px" href="https://mjml.io" font-family="sans-serif" padding="25px">Click here</mj-button>
      </mp-column>
    </mp-section>
    <mj-section>
      <mj-column>
        <mj-social mode="vertical">
          <mp-social-element pardot-repeatable="true">
            Hello
          </mp-social-element>
          <mp-social-element pardot-removable="true">
            Hello
          </mp-social-element>
        </mj-social>
      </mj-column>
